<header class="fixed top-0 left-0 w-full z-50 bg-theme-primary border-b border-theme-tertiary transition-all duration-300" data-controller="navbar">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16 items-center">
      <!-- Logo (Left) -->
      <div class="flex items-center">
        <a href="/" class="logo flex items-center space-x-2">
          <svg class="h-8 w-8 text-indigo-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span class="text-xl font-bold text-theme-primary">E-sika</span>
        </a>
      </div>

      <!-- Desktop Navigation (Center) -->
      <div class="hidden md:flex items-center justify-center flex-1">
        <nav class="flex space-x-6">
          <a href="/" class="nav-link text-theme-secondary hover:text-theme-primary px-3 py-2 text-sm font-medium <%= current_page?('/') ? 'active' : '' %>">Home</a>
          <a href="#" class="nav-link text-theme-secondary hover:text-theme-primary px-3 py-2 text-sm font-medium">Products</a>
          <a href="#" class="nav-link text-theme-secondary hover:text-theme-primary px-3 py-2 text-sm font-medium">Pricing</a>
          <a href="#" class="nav-link text-theme-secondary hover:text-theme-primary px-3 py-2 text-sm font-medium">Features</a>
          <a href="/tutorials" class="nav-link text-theme-secondary hover:text-theme-primary px-3 py-2 text-sm font-medium <%= current_page?('/tutorials') ? 'active' : '' %>">Tutorials</a>
          <a href="/help" class="nav-link text-theme-secondary hover:text-theme-primary px-3 py-2 text-sm font-medium <%= current_page?('/help') ? 'active' : '' %>">Help Center</a>
          <a href="/contact" class="nav-link text-theme-secondary hover:text-theme-primary px-3 py-2 text-sm font-medium <%= current_page?('/contact') ? 'active' : '' %>">Contact</a>
          <a href="/theme" class="nav-link text-theme-secondary hover:text-theme-primary px-3 py-2 text-sm font-medium <%= current_page?('/theme') ? 'active' : '' %>">Theme</a>
        </nav>
      </div>

      <!-- Right Side: Auth Buttons & Theme Toggle -->
      <div class="hidden md:flex items-center space-x-4">
        <%= render 'shared/theme_toggle' %>
        <a href="#" class="auth-button text-theme-secondary hover:text-theme-primary px-3 py-2 text-sm font-medium">Log in</a>
        <a href="#" class="auth-button bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors">Sign up</a>
      </div>

      <!-- Mobile Menu Button -->
      <div class="flex items-center md:hidden">
        <div class="flex items-center space-x-4">
          <%= render 'shared/theme_toggle' %>
          <button
            type="button"
            class="text-theme-secondary focus:outline-none"
            data-action="navbar#toggleMenu"
            data-navbar-target="menuButton"
            aria-label="Toggle menu"
          >
            <div class="hamburger">
              <span class="hamburger-top bg-theme-secondary"></span>
              <span class="hamburger-middle bg-theme-secondary"></span>
              <span class="hamburger-bottom bg-theme-secondary"></span>
            </div>
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Mobile Menu (Slide-in) -->
  <div
    class="fixed inset-y-0 right-0 w-full max-w-xs bg-theme-primary shadow-xl transform translate-x-full transition-transform duration-300 ease-in-out z-50 md:hidden mobile-menu overflow-y-auto"
    data-navbar-target="mobileMenu"
  >
    <div class="p-6 space-y-6">
      <div class="flex items-center justify-between mb-8">
        <a href="/" class="flex items-center space-x-2">
          <svg class="h-8 w-8 text-indigo-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span class="text-xl font-bold text-theme-primary">E-sika</span>
        </a>
        <button
          type="button"
          class="text-theme-secondary focus:outline-none"
          data-action="navbar#toggleMenu"
          aria-label="Close menu"
        >
          <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>

      <nav class="flex flex-col space-y-4">
        <a href="/" class="text-theme-secondary hover:text-theme-primary px-3 py-2 text-base font-medium <%= current_page?('/') ? 'text-indigo-600' : '' %>">Home</a>
        <a href="#" class="text-theme-secondary hover:text-theme-primary px-3 py-2 text-base font-medium">Products</a>
        <a href="#" class="text-theme-secondary hover:text-theme-primary px-3 py-2 text-base font-medium">Pricing</a>
        <a href="#" class="text-theme-secondary hover:text-theme-primary px-3 py-2 text-base font-medium">Features</a>
        <a href="/tutorials" class="text-theme-secondary hover:text-theme-primary px-3 py-2 text-base font-medium <%= current_page?('/tutorials') ? 'text-indigo-600' : '' %>">Tutorials</a>
        <a href="/help" class="text-theme-secondary hover:text-theme-primary px-3 py-2 text-base font-medium <%= current_page?('/help') ? 'text-indigo-600' : '' %>">Help Center</a>
        <a href="/contact" class="text-theme-secondary hover:text-theme-primary px-3 py-2 text-base font-medium <%= current_page?('/contact') ? 'text-indigo-600' : '' %>">Contact</a>
        <a href="/theme" class="text-theme-secondary hover:text-theme-primary px-3 py-2 text-base font-medium <%= current_page?('/theme') ? 'text-indigo-600' : '' %>">Theme</a>
      </nav>

      <div class="pt-6 border-t border-theme-tertiary">
        <div class="flex flex-col space-y-4">
          <a href="#" class="text-theme-secondary hover:text-theme-primary px-3 py-2 text-base font-medium">Log in</a>
          <a href="#" class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-md text-base font-medium text-center transition-colors">Sign up</a>
        </div>
      </div>
    </div>
  </div>
</header>

<!-- Spacer to prevent content from being hidden under fixed header -->
<div class="h-16"></div>