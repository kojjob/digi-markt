<%# Contact Page with Enhanced Visuals %>
<div class="bg-theme-primary min-h-screen">
  <%# Hero Section with Animated Gradient and Particles %>
  <section class="relative py-20 md:py-28 bg-gradient-to-r from-purple-600 via-indigo-700 to-blue-700 text-white overflow-hidden">
    <%# Background Effects %>
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-r from-purple-600 via-indigo-700 to-blue-700 opacity-90"></div>
      <%# Animated Grid Pattern %>
      <div class="absolute inset-0 bg-grid-white/[0.05] bg-grid-8"></div>
      <%# Animated Dots (for visual interest) %>
      <div class="absolute inset-0" aria-hidden="true">
        <canvas id="hero-particles" class="absolute inset-0"></canvas>
      </div>
    </div>

    <div class="relative z-10 container mx-auto px-4 sm:px-6 lg:px-8 max-w-5xl">
      <div class="text-center">
        <div class="mb-6 animate-float">
          <svg class="mx-auto h-16 w-16 text-indigo-300" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
        </div>
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4 tracking-tight">Get in Touch</h1>
        <p class="text-lg md:text-xl text-indigo-100 max-w-3xl mx-auto leading-relaxed">
          Have questions or need assistance with your e-commerce journey? Our team of experts is here to help you succeed at every step.
        </p>
        <div class="mt-8">
          <a href="#contact-form" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-indigo-700 bg-white hover:bg-indigo-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-300">
            Reach Out
            <svg class="ml-2 -mr-1 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M16.707 10.293a1 1 0 010 1.414l-6 6a1 1 0 01-1.414 0l-6-6a1 1 0 111.414-1.414L9 14.586V3a1 1 0 012 0v11.586l4.293-4.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <%# Contact Information and Form Section %>
  <section id="contact-form" class="py-16 md:py-20 lg:py-24 bg-theme-primary relative">
    <%# Decorative Elements %>
    <div class="absolute top-0 inset-x-0 h-64 bg-gradient-to-b from-indigo-700/10 to-transparent pointer-events-none"></div>
    <div class="absolute bottom-0 right-0 lg:block hidden">
      <svg width="404" height="404" fill="none" viewBox="0 0 404 404" aria-hidden="true" class="text-indigo-100 opacity-20">
        <defs>
          <pattern id="85737c0e-0916-41d7-917f-596dc7edfa27" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
            <rect x="0" y="0" width="4" height="4" class="text-indigo-200" fill="currentColor" />
          </pattern>
        </defs>
        <rect width="404" height="404" fill="url(#85737c0e-0916-41d7-917f-596dc7edfa27)" />
      </svg>
    </div>
    
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-6xl">
      <%# Flash Messages %>
      <% if flash[:success].present? %>
        <div class="mb-8 theme-alert theme-alert-success animate-fade-in" role="alert">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm font-medium"><%= flash[:success] %></p>
            </div>
            <div class="ml-auto pl-3">
              <div class="-mx-1.5 -my-1.5">
                <button type="button" class="inline-flex rounded-md p-1.5 text-green-500 hover:bg-green-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors" onclick="this.parentElement.parentElement.parentElement.remove()">
                  <span class="sr-only">Dismiss</span>
                  <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                </button>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      
      <div class="bg-theme-primary rounded-xl shadow-2xl overflow-hidden transform transition-all">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-0">
          <%# Contact Information %>
          <div class="bg-gradient-to-br from-indigo-700 to-purple-800 text-white p-8 md:p-12 relative overflow-hidden">
            <%# Decorative Swoosh %>
            <div class="absolute top-0 right-0 -mt-20 -mr-20 w-80 h-80 rounded-full bg-purple-600 opacity-20"></div>
            <div class="absolute bottom-0 left-0 -mb-32 -ml-32 w-80 h-80 rounded-full bg-indigo-800 opacity-20"></div>
            
            <div class="relative">
              <h2 class="text-2xl font-bold mb-2 text-white">Let's Connect</h2>
              <div class="w-20 h-1 bg-indigo-300 mb-6"></div>
              <p class="mb-8 text-indigo-100 leading-relaxed">
                We'd love to hear from you. Fill out the form and our team will get back to you as soon as possible. We're here to support your business journey.
              </p>

              <div class="space-y-8">
                <div class="flex items-start">
                  <div class="flex-shrink-0 bg-indigo-600 rounded-lg p-2">
                    <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h3 class="text-lg font-medium text-white">Our Office</h3>
                    <p class="mt-1 text-indigo-100">123 Business Avenue, Suite 100<br>New York, NY 10001</p>
                  </div>
                </div>

                <div class="flex items-start">
                  <div class="flex-shrink-0 bg-indigo-600 rounded-lg p-2">
                    <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h3 class="text-lg font-medium text-white">Phone</h3>
                    <p class="mt-1 text-indigo-100">+1 (555) 123-4567</p>
                  </div>
                </div>

                <div class="flex items-start">
                  <div class="flex-shrink-0 bg-indigo-600 rounded-lg p-2">
                    <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h3 class="text-lg font-medium text-white">Email</h3>
                    <p class="mt-1 text-indigo-100">info@esika.com</p>
                  </div>
                </div>

                <div class="flex items-start">
                  <div class="flex-shrink-0 bg-indigo-600 rounded-lg p-2">
                    <svg class="h-6 w-6 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h3 class="text-lg font-medium text-white">Business Hours</h3>
                    <p class="mt-1 text-indigo-100">Monday - Friday: 9AM - 5PM<br>Saturday - Sunday: Closed</p>
                  </div>
                </div>
              </div>

              <div class="mt-12">
                <h3 class="text-lg font-medium mb-4 text-white">Connect With Us</h3>
                <div class="flex space-x-4">
                  <a href="#" class="bg-white/10 hover:bg-white/20 rounded-full p-3 text-white hover:text-white transition-colors">
                    <span class="sr-only">Facebook</span>
                    <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd" />
                    </svg>
                  </a>
                  <a href="#" class="bg-white/10 hover:bg-white/20 rounded-full p-3 text-white hover:text-white transition-colors">
                    <span class="sr-only">Instagram</span>
                    <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path fill-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z" clip-rule="evenodd" />
                    </svg>
                  </a>
                  <a href="#" class="bg-white/10 hover:bg-white/20 rounded-full p-3 text-white hover:text-white transition-colors">
                    <span class="sr-only">Twitter</span>
                    <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84" />
                    </svg>
                  </a>
                  <a href="#" class="bg-white/10 hover:bg-white/20 rounded-full p-3 text-white hover:text-white transition-colors">
                    <span class="sr-only">LinkedIn</span>
                    <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path fill-rule="evenodd" d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z" clip-rule="evenodd" />
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </div>

          <%# Contact Form %>
          <div class="p-8 md:p-12 bg-theme-primary">
            <h2 class="text-2xl font-bold mb-6 text-theme-primary">Send Us a Message</h2>
            <div class="w-20 h-1 bg-indigo-600 mb-6"></div>

            <%= form_with(url: submit_contact_path, method: "post", class: "space-y-6", data: { controller: "validation" }) do |form| %>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="name" class="block text-sm font-medium text-theme-secondary mb-1">Full Name</label>
                  <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                      <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                      </svg>
                    </div>
                    <input
                      type="text"
                      id="name"
                      name="name"
                      class="theme-input pl-10 focus:ring-indigo-500 focus:border-indigo-500 transition-colors"
                      placeholder="Your name"
                      required
                      data-action="blur->validation#validateName"
                      data-validation-target="nameInput"
                    >
                  </div>
                  <p class="mt-1 text-sm text-red-600 hidden" data-validation-target="nameError">Please enter your name</p>
                </div>

                <div>
                  <label for="email" class="block text-sm font-medium text-theme-secondary mb-1">Email Address</label>
                  <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                      <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
                      </svg>
                    </div>
                    <input
                      type="email"
                      id="email"
                      name="email"
                      class="theme-input pl-10 focus:ring-indigo-500 focus:border-indigo-500 transition-colors"
                      placeholder="your.email@example.com"
                      required
                      data-action="blur->validation#validateEmail"
                      data-validation-target="emailInput"
                    >
                  </div>
                  <p class="mt-1 text-sm text-red-600 hidden" data-validation-target="emailError">Please enter a valid email address</p>
                </div>
              </div>

              <div>
                <label for="phone" class="block text-sm font-medium text-theme-secondary mb-1">Phone Number (Optional)</label>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                  </div>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    class="theme-input pl-10 focus:ring-indigo-500 focus:border-indigo-500 transition-colors"
                    placeholder="(123) 456-7890"
                    data-action="blur->validation#validatePhone"
                    data-validation-target="phoneInput"
                  >
                </div>
                <p class="mt-1 text-sm text-red-600 hidden" data-validation-target="phoneError">Please enter a valid phone number</p>
              </div>

              <div>
                <label for="subject" class="block text-sm font-medium text-theme-secondary mb-1">Subject</label>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="h-5 w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                    </svg>
                  </div>
                  <select
                    id="subject"
                    name="subject"
                    class="theme-select pl-10 focus:ring-indigo-500 focus:border-indigo-500 transition-colors"
                    required
                    data-validation-target="subjectInput"
                  >
                    <option value="">Select a subject</option>
                    <option value="general">General Inquiry</option>
                    <option value="support">Technical Support</option>
                    <option value="billing">Billing Question</option>
                    <option value="partnership">Partnership Opportunity</option>
                    <option value="other">Other</option>
                  </select>
                </div>
                <p class="mt-1 text-sm text-red-600 hidden" data-validation-target="subjectError">Please select a subject</p>
              </div>

              <div>
                <label for="message" class="block text-sm font-medium text-theme-secondary mb-1">Message</label>
                <div class="relative">
                  <textarea
                    id="message"
                    name="message"
                    rows="4"
                    class="theme-input focus:ring-indigo-500 focus:border-indigo-500 transition-colors"
                    placeholder="How can we help you?"
                    required
                    data-action="blur->validation#validateMessage"
                    data-validation-target="messageInput"
                  ></textarea>
                </div>
                <p class="mt-1 text-sm text-red-600 hidden" data-validation-target="messageError">Please enter your message</p>
              </div>

              <div class="flex items-start">
                <div class="flex items-center h-5">
                  <input
                    id="privacy"
                    name="privacy"
                    type="checkbox"
                    class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded"
                    required
                    data-validation-target="privacyInput"
                  >
                </div>
                <div class="ml-3 text-sm">
                  <label for="privacy" class="text-theme-secondary">
                    I agree to the <a href="#" class="text-indigo-600 hover:text-indigo-500 font-medium">Privacy Policy</a> and consent to being contacted.
                  </label>
                  <p class="mt-1 text-sm text-red-600 hidden" data-validation-target="privacyError">You must agree to the privacy policy</p>
                </div>
              </div>

              <div>
                <button
                  type="submit"
                  class="w-full px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-gradient-to-r from-indigo-600 to-purple-600 hover:from-indigo-700 hover:to-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-all duration-300 flex items-center justify-center"
                  data-action="click->validation#validateForm"
                >
                  <svg class="w-5 h-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 5l7 7-7 7M5 5l7 7-7 7" />
                  </svg>
                  Send Message
                </button>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%# Map Section with Visual Enhancements %>
  <section class="py-16 bg-theme-primary relative">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-6xl">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4 text-theme-primary">Visit Our Office</h2>
        <div class="w-24 h-1 bg-indigo-600 mx-auto mb-6"></div>
        <p class="text-theme-secondary max-w-2xl mx-auto">
