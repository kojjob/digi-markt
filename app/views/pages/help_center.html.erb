<%# Help Center Main Page %>
<div class="bg-theme-primary min-h-screen">
  <%# Hero Section %>
  <section class="relative py-16 md:py-24 bg-gradient-to-r from-indigo-600 to-indigo-800 text-white">
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-r from-indigo-600 to-indigo-800 opacity-90"></div>
      <div class="absolute inset-0 bg-grid-white/[0.05] bg-grid-8"></div>
    </div>
    
    <div class="relative z-10 container mx-auto px-4 sm:px-6 lg:px-8 max-w-5xl">
      <div class="text-center">
        <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4">How can we help you?</h1>
        <p class="text-lg md:text-xl text-indigo-100 max-w-3xl mx-auto mb-8">
          Find answers to your questions and learn how to get the most out of our platform.
        </p>
        
        <%# Search Box %>
        <div class="max-w-2xl mx-auto" data-controller="help-search">
          <div class="search-box">
            <input 
              type="text" 
              placeholder="Search for help articles..." 
              class="w-full py-3 px-4 pr-12 rounded-lg border border-indigo-400 bg-white/10 text-white placeholder-indigo-200 focus:outline-none focus:ring-2 focus:ring-white focus:border-transparent backdrop-blur-sm"
              data-help-search-target="input"
              data-action="input->help-search#search keydown.escape->help-search#reset"
            >
            <div class="search-icon">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            </div>
          </div>
          
          <%# Search Results %>
          <div class="search-results mt-2 text-left" data-help-search-target="results"></div>
          
          <%# No Results Message %>
          <div class="mt-4 text-center hidden" data-help-search-target="noResults">
            <p class="text-indigo-200">No results found. Please try a different search term.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%# Main Content %>
  <section class="py-12 md:py-16" data-controller="help-search">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-6xl">
      <%# Categories Grid %>
      <div class="mb-16" data-help-search-target="categories">
        <h2 class="text-2xl font-bold mb-8 text-theme-primary">Browse Help Categories</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @categories.each do |category| %>
            <a href="<%= help_category_path(category[:slug]) %>" class="category-card group">
              <div class="flex items-start">
                <div class="flex-shrink-0 mr-4">
                  <% case category[:icon] %>
                  <% when "rocket" %>
                    <div class="w-12 h-12 bg-indigo-100 text-indigo-600 rounded-lg flex items-center justify-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                      </svg>
                    </div>
                  <% when "user-circle" %>
                    <div class="w-12 h-12 bg-green-100 text-green-600 rounded-lg flex items-center justify-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                    </div>
                  <% when "shopping-bag" %>
                    <div class="w-12 h-12 bg-purple-100 text-purple-600 rounded-lg flex items-center justify-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                      </svg>
                    </div>
                  <% when "support" %>
                    <div class="w-12 h-12 bg-red-100 text-red-600 rounded-lg flex items-center justify-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
                      </svg>
                    </div>
                  <% when "shield-check" %>
                    <div class="w-12 h-12 bg-blue-100 text-blue-600 rounded-lg flex items-center justify-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                      </svg>
                    </div>
                  <% else %>
                    <div class="w-12 h-12 bg-gray-100 text-gray-600 rounded-lg flex items-center justify-center">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                    </div>
                  <% end %>
                </div>
                <div>
                  <h3 class="text-lg font-medium text-theme-primary group-hover:text-indigo-600 transition-colors"><%= category[:title] %></h3>
                  <p class="text-theme-secondary mt-1"><%= category[:description] %></p>
                  <div class="mt-3 text-indigo-600 text-sm flex items-center">
                    <span>View articles</span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </div>
                </div>
              </div>
            </a>
          <% end %>
        </div>
      </div>
      
      <%# Popular Articles %>
      <div class="mb-16" data-help-search-target="popular">
        <h2 class="text-2xl font-bold mb-8 text-theme-primary">Popular Articles</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <% @popular_articles.each do |article| %>
            <a 
              href="<%= help_article_path(article[:category_slug], article[:slug]) %>" 
              class="article-card"
              data-searchable
              data-title="<%= article[:title] %>"
              data-category="<%= article[:category] %>"
              data-category-slug="<%= article[:category_slug] %>"
              data-content=""
              data-url="<%= help_article_path(article[:category_slug], article[:slug]) %>"
            >
              <div class="flex items-start">
                <div class="flex-1">
                  <div class="text-xs text-theme-tertiary mb-1"><%= article[:category] %></div>
                  <h3 class="text-lg font-medium text-theme-primary hover:text-indigo-600 transition-colors"><%= article[:title] %></h3>
                  <div class="mt-2 text-theme-tertiary text-sm flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                    <span><%= article[:views] %> views</span>
                  </div>
                </div>
                <div class="ml-4">
                  <div class="text-indigo-600">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </div>
                </div>
              </div>
            </a>
          <% end %>
        </div>
      </div>
      
      <%# Recent Articles %>
      <div data-help-search-target="popular">
        <h2 class="text-2xl font-bold mb-8 text-theme-primary">Recently Updated</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <% @recent_articles.each do |article| %>
            <a 
              href="<%= help_article_path(article[:category_slug], article[:slug]) %>" 
              class="article-card"
              data-searchable
              data-title="<%= article[:title] %>"
              data-category="<%= article[:category] %>"
              data-category-slug="<%= article[:category_slug] %>"
              data-content=""
              data-url="<%= help_article_path(article[:category_slug], article[:slug]) %>"
            >
              <div class="flex items-start">
                <div class="flex-1">
                  <div class="text-xs text-theme-tertiary mb-1"><%= article[:category] %></div>
                  <h3 class="text-lg font-medium text-theme-primary hover:text-indigo-600 transition-colors"><%= article[:title] %></h3>
                  <div class="mt-2 text-theme-tertiary text-sm flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                    </svg>
                    <span>Updated <%= time_ago_in_words(article[:date]) %> ago</span>
                  </div>
                </div>
                <div class="ml-4">
                  <div class="text-indigo-600">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </div>
                </div>
              </div>
            </a>
          <% end %>
        </div>
      </div>
    </div>
  </section>

  <%# Contact Section %>
  <section class="py-12 md:py-16 bg-theme-secondary">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-6xl">
      <div class="text-center">
        <h2 class="text-2xl font-bold mb-4 text-theme-primary">Still Need Help?</h2>
        <p class="text-theme-secondary mb-8 max-w-2xl mx-auto">
          Can't find what you're looking for? Our support team is here to help you with any questions or issues you may have.
        </p>
        <a href="/contact" class="theme-btn theme-btn-primary">Contact Support</a>
      </div>
    </div>
  </section>
  
  <%# Hidden searchable content for all articles %>
  <div class="hidden">
    <% @categories.each do |category| %>
      <% category[:articles].each do |article| %>
        <div 
          data-searchable
          data-title="<%= article[:title] %>"
          data-category="<%= category[:title] %>"
          data-category-slug="<%= category[:slug] %>"
          data-content="<%= article[:content] %>"
          data-excerpt="<%= article[:excerpt] %>"
          data-url="<%= help_article_path(category[:slug], article[:slug]) %>"
        ></div>
      <% end %>
    <% end %>
  </div>
</div>
