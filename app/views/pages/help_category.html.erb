<%# Help Category Page %>
<div class="bg-theme-primary min-h-screen">
  <%# Hero Section %>
  <section class="relative py-12 md:py-16 bg-gradient-to-r from-indigo-600 to-indigo-800 text-white">
    <div class="absolute inset-0 overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-r from-indigo-600 to-indigo-800 opacity-90"></div>
      <div class="absolute inset-0 bg-grid-white/[0.05] bg-grid-8"></div>
    </div>
    
    <div class="relative z-10 container mx-auto px-4 sm:px-6 lg:px-8 max-w-5xl">
      <div class="text-center">
        <div class="breadcrumbs justify-center">
          <a href="<%= help_center_path %>" class="text-indigo-200 hover:text-white transition-colors">Help Center</a>
          <span class="separator">/</span>
          <span class="text-white"><%= @current_category[:title] %></span>
        </div>
        
        <h1 class="text-3xl md:text-4xl font-bold mb-4"><%= @current_category[:title] %></h1>
        <p class="text-lg text-indigo-100 max-w-3xl mx-auto mb-8">
          <%= @current_category[:description] %>
        </p>
        
        <%# Search Box %>
        <div class="max-w-2xl mx-auto" data-controller="help-search">
          <div class="search-box">
            <input 
              type="text" 
              placeholder="Search for help articles..." 
              class="w-full py-3 px-4 pr-12 rounded-lg border border-indigo-400 bg-white/10 text-white placeholder-indigo-200 focus:outline-none focus:ring-2 focus:ring-white focus:border-transparent backdrop-blur-sm"
              data-help-search-target="input"
              data-action="input->help-search#search keydown.escape->help-search#reset"
            >
            <div class="search-icon">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            </div>
          </div>
          
          <%# Search Results %>
          <div class="search-results mt-2 text-left" data-help-search-target="results"></div>
          
          <%# No Results Message %>
          <div class="mt-4 text-center hidden" data-help-search-target="noResults">
            <p class="text-indigo-200">No results found. Please try a different search term.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <%# Main Content %>
  <section class="py-12 md:py-16" data-controller="help-search">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-6xl">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <%# Sidebar %>
        <div class="md:col-span-1">
          <div class="help-sidebar">
            <h3 class="text-xl font-bold mb-4 text-theme-primary">Categories</h3>
            <nav class="mb-8">
              <ul class="space-y-1">
                <% @categories.each do |category| %>
                  <li>
                    <a 
                      href="<%= help_category_path(category[:slug]) %>" 
                      class="block px-4 py-2 rounded-lg <%= category[:slug] == @category ? 'bg-indigo-50 text-indigo-700 font-medium' : 'text-theme-secondary hover:bg-theme-secondary' %> transition-colors"
                    >
                      <%= category[:title] %>
                    </a>
                  </li>
                <% end %>
              </ul>
            </nav>
            
            <div class="bg-theme-secondary rounded-lg p-6">
              <h4 class="text-lg font-medium mb-3 text-theme-primary">Need More Help?</h4>
              <p class="text-theme-secondary mb-4">Can't find what you're looking for? Our support team is ready to assist you.</p>
              <a href="/contact" class="theme-btn theme-btn-primary w-full text-center">Contact Support</a>
            </div>
          </div>
        </div>
        
        <%# Articles List %>
        <div class="md:col-span-2" data-help-search-target="categories">
          <h2 class="text-2xl font-bold mb-6 text-theme-primary"><%= @current_category[:title] %> Articles</h2>
          
          <div class="space-y-4">
            <% @articles.each do |article| %>
              <a 
                href="<%= help_article_path(@category, article[:slug]) %>" 
                class="block bg-theme-primary rounded-lg p-5 border border-theme-tertiary hover:border-indigo-300 transition-colors"
                data-searchable
                data-title="<%= article[:title] %>"
                data-category="<%= @current_category[:title] %>"
                data-category-slug="<%= @category %>"
                data-content="<%= article[:content] %>"
                data-excerpt="<%= article[:excerpt] %>"
                data-url="<%= help_article_path(@category, article[:slug]) %>"
              >
                <h3 class="text-lg font-medium text-theme-primary hover:text-indigo-600 transition-colors mb-2"><%= article[:title] %></h3>
                <p class="text-theme-secondary mb-3"><%= article[:excerpt] %></p>
                <div class="flex items-center text-indigo-600 text-sm">
                  <span>Read article</span>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </div>
              </a>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <%# Other Categories Section %>
  <section class="py-12 md:py-16 bg-theme-secondary">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-6xl">
      <h2 class="text-2xl font-bold mb-8 text-theme-primary text-center">Explore Other Categories</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @categories.reject { |cat| cat[:slug] == @category }.first(3).each do |category| %>
          <a href="<%= help_category_path(category[:slug]) %>" class="category-card group">
            <div class="flex items-start">
              <div class="flex-shrink-0 mr-4">
                <% case category[:icon] %>
                <% when "rocket" %>
                  <div class="w-12 h-12 bg-indigo-100 text-indigo-600 rounded-lg flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                  </div>
                <% when "user-circle" %>
                  <div class="w-12 h-12 bg-green-100 text-green-600 rounded-lg flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                <% when "shopping-bag" %>
                  <div class="w-12 h-12 bg-purple-100 text-purple-600 rounded-lg flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z" />
                    </svg>
                  </div>
                <% when "support" %>
                  <div class="w-12 h-12 bg-red-100 text-red-600 rounded-lg flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z" />
                    </svg>
                  </div>
                <% when "shield-check" %>
                  <div class="w-12 h-12 bg-blue-100 text-blue-600 rounded-lg flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                    </svg>
                  </div>
                <% else %>
                  <div class="w-12 h-12 bg-gray-100 text-gray-600 rounded-lg flex items-center justify-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                <% end %>
              </div>
              <div>
                <h3 class="text-lg font-medium text-theme-primary group-hover:text-indigo-600 transition-colors"><%= category[:title] %></h3>
                <p class="text-theme-secondary mt-1"><%= category[:description] %></p>
                <div class="mt-3 text-indigo-600 text-sm flex items-center">
                  <span>View articles</span>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </div>
              </div>
            </div>
          </a>
        <% end %>
      </div>
    </div>
  </section>
</div>
