<% content_for :title, "E-sika Knowledge Base & User Guides" %>

<div class="min-h-screen bg-gradient-to-b from-gray-50 to-white">
  <!-- Header Section with Search -->
  <div class="relative bg-gradient-to-r from-indigo-700 to-purple-800 pt-16 pb-24 overflow-hidden">
    <!-- Background Elements -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute -top-40 -right-40 w-80 h-80 bg-indigo-500 rounded-full filter blur-3xl"></div>
      <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-purple-500 rounded-full filter blur-3xl"></div>
      <div class="absolute inset-0 bg-[url('/assets/pattern-grid.svg')] bg-repeat opacity-10"></div>
